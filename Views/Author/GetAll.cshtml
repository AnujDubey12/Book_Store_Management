@model IEnumerable<Book_Store1.Models.Domain.Author>
@{
}

<div class="container pt-5">
    <div class="row">
        <div>
            <a class="btn btn-primary" href="/Author/Add">Add More</a>

        </div>
        <div class="col-md-6">
            <h3>Authors</h3>

            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>AuthorName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorName</td>
                            <td>
                                <a class="btn btn-success" href="/Author/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are You sure?')" href="/Author/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
